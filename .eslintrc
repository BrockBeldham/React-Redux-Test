{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "object-curly-spacing" : [2, "always"],
    "quotes"               : [2, "single"],
    "linebreak-style"      : [2, "unix"],
    "semi"                 : [2, "always"],
    "no-console"           : 1
  }
}
